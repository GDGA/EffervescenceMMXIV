<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Rannneeti" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:gravity="center"
        android:text="Ranneeti"
        android:textColor="#333"
        android:textSize="32sp" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/imageloc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/map21"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:paddingLeft="1dp"
            android:text="LT"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333" />

        <ImageView
            android:id="@+id/imagetime"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/clock"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="12:00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_centerHorizontal="true"
        android:paddingBottom="5dp"
        android:paddingTop="2dp"
        android:text="Favourite"
        android:textColor="#333" />

    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView1"
        android:layout_below="@+id/checkBox1" >

       <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="About"
                android:textColor="#333"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:padding="10dp"
                android:text="Any human can make things bigger, more complex, and more violent. It takes a touch of genius-and a lot of courage-to move in the opposite direction. 
Management is doing things right; leadership is doing the right things."
                android:textColor="#333"
                android:textSize="20sp"
                tools:ignore="ObsoleteLayoutParam" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:gravity="center"
                android:text="Rules"
                android:textColor="#333"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:padding="10dp"
                android:text="1. Each team consists of 2 â€“ 5 members. It is not necessary that all students of a team  
are from a particular year. \n
2. Identification card should be brought by the students. \n
3. You can use the modern technology/gadgets in all possible ways to win the  
competetion. There is no limits on anything.  \n
4. Have fun. \n
                "
                android:textColor="#333"
                android:textSize="20sp"
                tools:ignore="ObsoleteLayoutParam" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:gravity="center"
                android:text="Organisers"
                android:textColor="#333"
                android:textSize="32sp" />

           
            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_below="@+id/textView8"
                android:drawableLeft="@drawable/call"
                android:text="Akanksha: 8957386304"
                android:textColor="#333"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:clickable="true"
                android:drawableLeft="@drawable/call"
            
                android:text="Sneha Pedakam: 8953388692"
                android:textColor="#333"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:clickable="true"
                android:drawableLeft="@drawable/call"
               
                android:text="Vishnu KS: 9559386146"
                android:textColor="#333"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:layout_toRightOf="@+id/checkBox1"
        android:paddingTop="30dp"
        android:src="@drawable/map1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toLeftOf="@+id/checkBox1"
        android:paddingTop="15dp"
        android:src="@drawable/clock4"
        tools:ignore="ContentDescription" />

</RelativeLayout>